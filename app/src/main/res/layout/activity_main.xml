<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:background="@drawable/card_background"
        android:elevation="5dp"
        android:textColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="Qui est le 44ᵉ président des États-Unis ?"
        android:textSize="40sp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/answer_background"
        android:gravity="center"
        android:text="Barack Obama"
        android:visibility="invisible"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/flashcard_answer_1"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/flashcard_question"
        android:layout_marginStart="16dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/card_background"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="Mr Dex"
        android:textColor="#040AF2"
        android:textSize="50sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/flashcard_answer_2"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/flashcard_answer_1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/card_background"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="Barak OBAMA"
        android:textColor="#040AF2"
        android:textSize="50sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/flashcard_answer_3"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/flashcard_answer_2"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/card_background"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="Bill Clinton"
        android:textColor="#040AF2"
        android:textSize="50sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/flashcard_answer_4"
        android:layout_width="366dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/flashcard_answer_3"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/card_background"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="Joe Biden"
        android:textColor="#040AF2"
        android:textSize="50sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/Addcardactivity"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/flashcard_answer_4"
        android:layout_marginTop="63dp"
        android:layout_marginStart="300dp"
        android:src="@drawable/icon"
        android:clickable="true"
        android:focusable="true" />
</RelativeLayout>